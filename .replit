modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["ffmpeg-full", "openssl", "postgresql"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "--timeout", "300", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "sequence"  # primero instala deps, luego lanza app
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_deps"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "install_deps"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add pytube requests pydub"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --timeout 600 main:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
